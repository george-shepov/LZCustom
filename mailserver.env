# Docker Mailserver Configuration
# Main configuration for all domains

# General Settings
OVERRIDE_HOSTNAME=mail.giorgiy.org
DOMAINNAME=giorgiy.org
POSTMASTER_ADDRESS=postmaster@giorgiy.org

# Additional domains
PERMITTED_SENDER_DOMAINS=giorgiy.org,giorgiy-shepov.com,bravoohiocci.org,lodexinc.com

# SSL Configuration
SSL_TYPE=letsencrypt
SSL_CERT_PATH=/etc/letsencrypt/live/giorgiy.org/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/giorgiy.org/privkey.pem

# Security Settings
ENABLE_SPAMASSASSIN=1
ENABLE_CLAMAV=1
ENABLE_FAIL2BAN=1
ENABLE_POSTGREY=1
ENABLE_AMAVIS=1

# Authentication
ENABLE_SASLAUTHD=0
ENABLE_OAUTH2=0
ACCOUNT_PROVISIONER=FILE

# SMTP Settings
ENABLE_SMTPS=1
ENABLE_SUBMISSION=1
ENABLE_SUBMISSIONS=1

# IMAP Settings
ENABLE_IMAP=1
ENABLE_IMAPS=1

# POP3 Settings (disabled for security)
ENABLE_POP3=0
ENABLE_POP3S=0

# Logging
LOG_LEVEL=info
SUPERVISOR_LOGLEVEL=warn

# Postfix Settings
POSTFIX_MAILBOX_SIZE_LIMIT=0
POSTFIX_MESSAGE_SIZE_LIMIT=100000000

# Dovecot Settings
DOVECOT_MAILBOX_FORMAT=maildir
DOVECOT_TLS=yes

# Network Settings
NETWORK_INTERFACE=eth0
PERMIT_DOCKER=connected-networks

# Backup and Maintenance
ENABLE_QUOTAS=1
QUOTA_THRESHOLD=90

# Anti-Spam Settings
SA_TAG=2.0
SA_TAG2=6.31
SA_KILL=10.0
SA_SPAM_SUBJECT=***SPAM***

# DKIM Settings
ENABLE_OPENDKIM=1
ENABLE_OPENDMARC=1
ENABLE_POLICYD_SPF=1

# Additional Security
ENABLE_MANAGESIEVE=1
ENABLE_UPDATE_CHECK=1
UPDATE_CHECK_INTERVAL=1d

# Custom Settings for Multiple Domains
ENABLE_LDAP=0
LDAP_SERVER_HOST=
LDAP_SEARCH_BASE=
LDAP_BIND_DN=
LDAP_BIND_PW=

# Timezone
TZ=America/New_York
